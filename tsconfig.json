{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./lib",
    "target": "ESNext",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "isolatedModules": true,
    "declarationMap": true,
    "declaration": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "rootDir": "."
    }
  }
}